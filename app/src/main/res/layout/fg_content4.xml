<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment4">

   <RelativeLayout
       android:id="@+id/head_relative"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_150"
       android:background="@mipmap/bg4"
       >
       <RelativeLayout
           android:id="@+id/head_img"
           android:layout_width="@dimen/dp_80"
           android:layout_height="@dimen/dp_80"
           android:gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/dp_10"
           android:layout_marginLeft="@dimen/dp_20">
           <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_launcher_round"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="@dimen/dp_80"
           android:layout_height="@dimen/dp_80"
           android:gravity="bottom"
           android:layout_centerInParent="true"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_toRightOf="@+id/head_img"
           >
          <TextView
              android:id="@+id/head_text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="维保助手"/>
           <TextView
               android:id="@+id/head_text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_below="@+id/head_text1"
               android:text="账号："/>
       </RelativeLayout>
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_relative">
        <ListView
            android:id="@+id/line_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/foot_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/body_relative">
        <TextView
            android:id="@+id/quit_acount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="退出账号"/>
    </RelativeLayout>

</RelativeLayout>
