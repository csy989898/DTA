<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    tools:context="com.example.administrator.maintenanceapp.Activity.NewInfoActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/info_back1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/back1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_5"
            android:text="新信息通知"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="接收新信息通知"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="已开启"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_height="@dimen/dp_61">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:text="通知显示信息详情"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_20" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="若关闭，当收到信信息时，通知提示将不显示发信人和内容摘要"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_8"
                    android:layout_marginLeft="@dimen/dp_20" />
            </LinearLayout>
            <!--<com.example.administrator.maintenanceapp.View.WiperSwitch
                android:id="@+id/wiperSwitc"
                android:layout_width="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="top"
                android:layout_height="@dimen/dp_20"
                />-->
            <!--<Switch
                android:id="@+id/swh_status"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_gravity="top"
                android:thumb="@drawable/switch_ios_thumb"
                android:track="@drawable/switch_ios_track_selector" />-->
            <ToggleButton
                android:id="@+id/tbtn_open1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="top"
                android:textOff="关闭"
                android:textOn="打开" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_8"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:id="@+id/newinfo_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="@dimen/dp_30"
                android:text="功能消息免打扰"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="@dimen/dp_30"
               android:background="@mipmap/next" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_8"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="接收新信息通知"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="已开启"
                android:gravity="center"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="7"
                android:layout_height="@dimen/dp_30"
                android:text="声音"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_12"/>
            <!--<com.example.administrator.maintenanceapp.View.WiperSwitch
                android:id="@+id/swh_status2"
                android:layout_width="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="@dimen/dp_20"
                />-->
            <!--<Switch
                android:id="@+id/swh_status2"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb_selector"
                android:track="@drawable/track_selctor" />-->
            <ToggleButton
                android:id="@+id/tbtn_open2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="top"
                android:textOff="关闭"
                android:textOn="打开" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="7"
                android:layout_height="@dimen/dp_30"
                android:text="震动"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_12"/>
            <!--<com.example.administrator.maintenanceapp.View.WiperSwitch
                android:id="@+id/swh_status3"
                android:layout_width="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="@dimen/dp_20"
                />-->
            <!--<Switch
                android:id="@+id/swh_status3"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb_selector"
                android:track="@drawable/track_selctor" />-->
            <ToggleButton
                android:id="@+id/tbtn_open3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="top"
                android:textOff="关闭"
                android:textOn="打开" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:text="当维保助手在运行时，你可以设置是否需要声音或者震动"
            android:gravity="center_vertical"
            android:background="@color/lightgray"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/sp_12"
             />
    </LinearLayout>
</LinearLayout>
