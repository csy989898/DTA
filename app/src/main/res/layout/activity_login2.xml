<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg4"
    tools:context="com.example.administrator.maintenanceapp.Activity.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_100"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GuangHuaGuoRui"
            android:gravity="center"
            android:textSize="@dimen/sp_24"
            android:padding="@dimen/dp_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:background="#c4ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#c407a6e6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_12"
                android:text="账户"
                />

            <EditText
                android:id="@+id/login_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:hint="请输入用户名"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:background="#c4d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_12"
                android:text="密码"
                />

            <EditText
                android:id="@+id/login_passwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:maxLines="1"
                android:hint="请输入账号密码"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">
        <Button
            android:id="@+id/login_loginbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/bg_radius_sign_btn"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_reg_btn"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="4.5"
                android:layout_height="@dimen/dp_30"
                android:hint="注册账户"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:gravity="right"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_black"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/login_recover"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="4.5"
                android:layout_height="@dimen/dp_30"
                android:hint="忘记密码"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/sp_14"
                android:gravity="left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            >
            <TextView
                android:id="@+id/login_customer"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="4.5"
                android:layout_height="@dimen/dp_30"
                android:hint="游客登录"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/sp_14"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
